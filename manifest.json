{
  "manifest_version": 3,
  "name": "WP Forum Notifier",
  "version": "1.0.1",
  "description": "Track the 10 latest unresolved WP forum threads.",
  "permissions": ["notifications", "storage", "alarms"],
  "host_permissions": ["https://wordpress.org/*"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html"
  }
  
}